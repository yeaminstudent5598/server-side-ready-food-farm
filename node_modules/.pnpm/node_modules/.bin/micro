#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/yeamin student/readfoodform/server-side-ready-food-farm/node_modules/.pnpm/micro@9.3.5-canary.3/node_modules/micro/bin/node_modules:/mnt/d/yeamin student/readfoodform/server-side-ready-food-farm/node_modules/.pnpm/micro@9.3.5-canary.3/node_modules/micro/node_modules:/mnt/d/yeamin student/readfoodform/server-side-ready-food-farm/node_modules/.pnpm/micro@9.3.5-canary.3/node_modules:/mnt/d/yeamin student/readfoodform/server-side-ready-food-farm/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/yeamin student/readfoodform/server-side-ready-food-farm/node_modules/.pnpm/micro@9.3.5-canary.3/node_modules/micro/bin/node_modules:/mnt/d/yeamin student/readfoodform/server-side-ready-food-farm/node_modules/.pnpm/micro@9.3.5-canary.3/node_modules/micro/node_modules:/mnt/d/yeamin student/readfoodform/server-side-ready-food-farm/node_modules/.pnpm/micro@9.3.5-canary.3/node_modules:/mnt/d/yeamin student/readfoodform/server-side-ready-food-farm/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../micro/bin/micro.js" "$@"
else
  exec node  "$basedir/../micro/bin/micro.js" "$@"
fi
